# Production Environment Variables for Backend
# IMPORTANT: These will be set in DigitalOcean as secrets

# Database connection (you'll get this from MongoDB Atlas)
MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/usethissearch

# Database name
DB_NAME=usethissearch

# Stripe API Keys (get these from your Stripe dashboard)
STRIPE_SECRET_KEY=sk_live_your_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_live_your_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Email settings (for trial reminders, optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@usethissearch.com

# Claude API (for content generation)
CLAUDE_API_KEY=your_claude_api_key_here

# Admin credentials (for emergency access)
ADMIN_EMAIL=your_admin_email@example.com
ADMIN_PASSWORD_HASH=your_hashed_password